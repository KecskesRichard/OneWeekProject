html
  head
    title= title
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.fixed-top.navbar-expand-lg.navbar-dark.bg-dark
      a.navbar-brand(href="https://www.facebook.com/richard.kecskes.9") Richard Kecskes
      #navbarNavAltMarkup.collapse.navbar-collapse
        .navbar-nav.mr-auto
          a.nav-item.nav-link(routerLink="homepage") Homepage 
          a.nav-item.nav-link(routerLink="profile") Profile
          a.nav-item.nav-link(routerLink="knowledge") Knowledge
          a.nav-item.nav-link(routerLink="api") API
          a.nav-item.nav-link(routerLink="contact") Contact
          .btn-group.offset-11
            button.nav-item.btn.btn-success(type='button', data-toggle="modal", data-target="#loginModal") Bejelentkezés
            button.nav-item.btn.btn-primary(type='button', data-toggle="modal", data-target="#registerModal") Regisztráció
router-outlet
    // Modals
    .modal.fade#loginModal(tabindex='-1', role='dialog', aria-labelledby='loginModalLabel', aria-hidden='true', style='display: none;')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            h5.modal-title#loginModalLabel Login to Your Account
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') &times;
          .modal-body
            form
              input(type='text', name='username', placeholder='Username', [(ngModel)]='user.username')
              input(type='password', name='password', placeholder='Password' [(ngModel)]='user.password')
              button.btn.btn-primary(type='button', name='login', value='Login', data-dismiss='modal', (click)='login()')
          .modal-footer
            button.btn.btn-secondary(type='button', data-dismiss='modal') Close
            
    main
      block content
        
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous")
